<h1 class="title is-2">Contact Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_groups.each do |contact_group| %>
      <tr>
        <td><%= contact_group.name %></td>
        <td><%= contact_group.last_contact %></td>
        <td><%= link_to 'Show', contact_group %></td>
        <td><%= link_to 'Edit', edit_contact_group_path(contact_group) %></td>
        <td><%= link_to 'Destroy', contact_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact Group', new_contact_group_path %>
