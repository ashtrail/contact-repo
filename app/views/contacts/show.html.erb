<h1 class="title is-2"><%= @contact.name %></h1>
<p>Category: <%= link_to @contact.category.name, @contact.category %></p>

<% unless @contact.common_interests.empty? %>
  <h2>Common Interests</h2>
  <ul>
    <% @contact.common_interests.each do |ci| %>
      <li> <%= link_to ci.name, ci %> </li>
    <% end %>
  </ul>
<% end %>

<% unless @contact.contact_groups.empty? %>
  <h2>Groups</h2>
  <ul>
    <% @contact.contact_groups.each do |group| %>
      <li> <%= link_to group.name, group %> </li>
    <% end %>
  </ul>
<% end %>

<div class="columns is-gapless mt-6">
  <div class="column is-1">
    <%= link_to 'Edit', edit_contact_path(@contact), class: "button" %>
  </div>
  <div class="column is-1">
    <%= button_to 'Destroy', contact_path(@contact),
      method: :delete,
      class: "button is-danger is-outlined",
      data: { confirm: 'Are you sure?' } %>
  </div>
</div>
